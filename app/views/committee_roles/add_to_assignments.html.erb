<div  id="add_new_to_assignments" style="float:right; width:60%;">
    <% dest = url_for :controller => 'committee_roles', :action => 'update_assignments', :id => @committee_role.id %>
    <% form_tag( :controller => 'role_assignments', :action => 'new', :redirect => dest ) do %>
        <%= submit_tag 'Add New...' %>
    <% end %> <!-- end form_tag -->
</div>

<div id="add_to_assignments_list">
    <% form_tag( :controller => 'committee_roles', :action => :update_assignments, :id => @committee_role ) do %>
        <%= submit_tag 'Add Selected' %>
        <p class="select_list">&nbsp;</p>
        <% for role_assignment in @role_assignments %>
            <p class="select_list"> <%= check_box_tag("role_assignment_ids[]",role_assignment.id) %> <%= role_assignment.sname %> </p>
        <% end %>
        <p class="select_list">&nbsp;</p>
        <%= submit_tag 'Add Selected' %>
    <% end %> <!-- end form_tag -->
</div>

