
<%
   # default vis control to show all
   unless @show_item
     @show_item = {}
     @show_item.default = true
   end

   @ft_view_section = {}
%>

<!-- BEGIN-UID.user_ctrls -->

<!-- END-UID.user_ctrls -->

<% @ft_view_section[:ft_prop_title] = capture { %>
<% if @show_item[:ft_prop_title] then %>
<div class="show_iname">
   <%= @website_function.iname %>
</div>
<% end %>
<% } %>



<% @ft_view_section[:name] = capture { %>
<% if @show_item[:name] then %>

  <!-- Name -->

  <div class="show_attr_group attr_group_website_function_name ">      <!-- div10 -->
    <div class="show_attr_label"> Name </div>                    <!-- div11 -->
    <div class="show_attr_value single_line"><%= auto_link(@website_function.name.to_s) %>&nbsp;</div>   <!-- div12h -->
  </div>   <!-- div10 end -->
<% end %>
<% } %>



<% @ft_view_section[:description] = capture { %>
<% if @show_item[:description] then %>

  <!-- Description -->

  <div class="show_attr_group attr_group_website_function_description ">      <!-- div10 -->
    <div class="show_attr_label"> Description </div>                    <!-- div11 -->
    <div class="show_attr_value multiline"><%= rc_format(@website_function.description.to_s,"description") %></div>   <!-- div12g -->
  </div>   <!-- div10 end -->
<% end %>
<% } %>



<% @ft_view_section[:link] = capture { %>
<% if @show_item[:link] then %>

  <!-- Link -->

  <div class="show_attr_group attr_group_website_function_link ">      <!-- div10 -->
    <div class="show_attr_label"> Link </div>                    <!-- div11 -->
    <div class="show_attr_value linktext_value">  <!-- div12f -->
        <% targ = @website_function.link %>
        <% text = "..." %>
        <% if targ && (targ[0,4] == "http" || targ[0,3] == "ftp") then %>
        <%    text = link_to "Open...", targ, :target => 'show_link' %>
        <% end %>
        <%= text %>
    </div>   <!-- div12f end -->
  </div>   <!-- div10 end -->
<% end %>
<% } %>



<% @ft_view_section[:seq_no] = capture { %>
<% if @show_item[:seq_no] then %>

  <!-- Seq No -->

  <div class="show_attr_group attr_group_website_function_seq_no ">      <!-- div10 -->
    <div class="show_attr_label"> Seq No </div>                    <!-- div11 -->
    <div class="show_attr_value single_line"><%= auto_link(@website_function.seq_no.to_s) %>&nbsp;</div>   <!-- div12h -->
  </div>   <!-- div10 end -->
<% end %>
<% } %>


<% @ft_view_section[:task] = capture { %>
<% if @show_item[:task] then %>

    <!-- Task -->

    <div class="show_attr_group attr_group_website_function_functions">     <!-- div16b -->
      <div class="show_attr_label"> Task </div>         <!-- div17b -->
      <div class="show_attr_value"> <%= @website_function.task.nil? ? "" : link_to(@website_function.task.iname, url_show(@website_function.task)) %>&nbsp;</div>
    </div>         <!-- end div16b -->

<% end %>
<% } %>

<% @ft_view_section_order = []
   @ft_view_section_order << :ft_prop_title
   @ft_view_section_order << :name
   @ft_view_section_order << :description
   @ft_view_section_order << :link
   @ft_view_section_order << :seq_no
   @ft_view_section_order << :task
%>

<!-- BEGIN-UID.user_ordering -->

<!-- END-UID.user_ordering -->

<% for s in @ft_view_section_order %>
   <%= @ft_view_section[s].to_s %>
<% end %>

