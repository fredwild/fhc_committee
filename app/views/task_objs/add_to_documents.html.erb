<div  id="add_new_to_documents" style="float:right; width:60%;">
    <% dest = url_for :controller => 'task_objs', :action => 'update_documents', :id => @task_obj.id %>
    <% form_tag( :controller => 'documents', :action => 'new', :redirect => dest ) do %>
        <%= submit_tag 'Add New...' %>
    <% end %> <!-- end form_tag -->
</div>

<div id="add_to_documents_list">
    <% form_tag( :controller => 'task_objs', :action => :update_documents, :id => @task_obj ) do %>
        <%= submit_tag 'Add Selected' %>
        <p class="select_list">&nbsp;</p>
        <% for document in @documents %>
            <p class="select_list"> <%= check_box_tag("document_ids[]",document.id) %> <%= document.sname %> </p>
        <% end %>
        <p class="select_list">&nbsp;</p>
        <%= submit_tag 'Add Selected' %>
    <% end %> <!-- end form_tag -->
</div>

