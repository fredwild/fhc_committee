<div  id="add_new_to_follow_on_tasks" style="float:right; width:60%;">
    <% dest = url_for :controller => 'task_objs', :action => 'update_follow_on_tasks', :id => @task_obj.id %>
    <% form_tag( :controller => 'task_objs', :action => 'new', :redirect => dest ) do %>
        <%= submit_tag 'Add New...' %>
    <% end %> <!-- end form_tag -->
</div>

<div id="add_to_follow_on_tasks_list">
    <% form_tag( :controller => 'task_objs', :action => :update_follow_on_tasks, :id => @task_obj ) do %>
        <%= submit_tag 'Add Selected' %>
        <p class="select_list">&nbsp;</p>
        <% for task_obj in @task_objs %>
            <p class="select_list"> <%= check_box_tag("task_obj_ids[]",task_obj.id) %> <%= task_obj.sname %> </p>
        <% end %>
        <p class="select_list">&nbsp;</p>
        <%= submit_tag 'Add Selected' %>
    <% end %> <!-- end form_tag -->
</div>

