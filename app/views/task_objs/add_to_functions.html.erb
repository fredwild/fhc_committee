<div  id="add_new_to_functions" style="float:right; width:60%;">
    <% dest = url_for :controller => 'task_objs', :action => 'update_functions', :id => @task_obj.id %>
    <% form_tag( :controller => 'website_functions', :action => 'new', :redirect => dest ) do %>
        <%= submit_tag 'Add New...' %>
    <% end %> <!-- end form_tag -->
</div>

<div id="add_to_functions_list">
    <% form_tag( :controller => 'task_objs', :action => :update_functions, :id => @task_obj ) do %>
        <%= submit_tag 'Add Selected' %>
        <p class="select_list">&nbsp;</p>
        <% for website_function in @website_functions %>
            <p class="select_list"> <%= check_box_tag("website_function_ids[]",website_function.id) %> <%= website_function.sname %> </p>
        <% end %>
        <p class="select_list">&nbsp;</p>
        <%= submit_tag 'Add Selected' %>
    <% end %> <!-- end form_tag -->
</div>

