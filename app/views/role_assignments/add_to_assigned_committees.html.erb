<div  id="add_new_to_assigned_committees" style="float:right; width:60%;">
    <% dest = url_for :controller => 'role_assignments', :action => 'update_assigned_committees', :id => @role_assignment.id %>
    <% form_tag( :controller => 'committees', :action => 'new', :redirect => dest ) do %>
        <%= submit_tag 'Add New...' %>
    <% end %> <!-- end form_tag -->
</div>

<div id="add_to_assigned_committees_list">
    <% form_tag( :controller => 'role_assignments', :action => :update_assigned_committees, :id => @role_assignment ) do %>
        <%= submit_tag 'Add Selected' %>
        <p class="select_list">&nbsp;</p>
        <% for committee in @committees %>
            <p class="select_list"> <%= check_box_tag("committee_ids[]",committee.id) %> <%= committee.sname %> </p>
        <% end %>
        <p class="select_list">&nbsp;</p>
        <%= submit_tag 'Add Selected' %>
    <% end %> <!-- end form_tag -->
</div>

