<div  id="add_new_to_meetings" style="float:right; width:60%;">
    <% dest = url_for :controller => 'months', :action => 'update_meetings', :id => @month.id %>
    <% form_tag( :controller => 'meetings', :action => 'new', :redirect => dest ) do %>
        <%= submit_tag 'Add New...' %>
    <% end %> <!-- end form_tag -->
</div>

<div id="add_to_meetings_list">
    <% form_tag( :controller => 'months', :action => :update_meetings, :id => @month ) do %>
        <%= submit_tag 'Add Selected' %>
        <p class="select_list">&nbsp;</p>
        <% for meeting in @meetings %>
            <p class="select_list"> <%= check_box_tag("meeting_ids[]",meeting.id) %> <%= meeting.sname %> </p>
        <% end %>
        <p class="select_list">&nbsp;</p>
        <%= submit_tag 'Add Selected' %>
    <% end %> <!-- end form_tag -->
</div>

